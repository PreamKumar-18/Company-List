@page
@model Hub.Pages.Companys.IndexModel
@{
}

<div class="container">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-success " asp-page="Create"><i class="bi bi-plus-circle"></i> Add Company</a>
        </div>
        <br />
        <br />

        <table id="table"class="table table-bordered table-striped table-responsive" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">Company Name</th>
                    <th class="text-center">Location</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Companies)
                {
                    <tr>
                        <td width="40%">@item.Name</td>
                        <td width="40%">@item.Location</td>
                            <td  class="d-flex align-items-center justify-content-center">
                                <div class="w-75 btn-group" role="group">
                                        <a class="btn btn-warning" asp-page="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="bi bi-pencil-square"></i></a>
                                        <a class="btn btn-danger" asp-page="Delete" asp-route-id="@item.Id"data-toggle="tooltip" data-placement="top" title="Delete">
                                            <i class="bi bi-trash"></i></a>
                                </div>
                          
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
     <script>
         $('.table').DataTable();
     </script>
 }